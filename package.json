{
  "name": "oikos-subgraph",
  "license": "MIT",
  "author": "Oikos",
  "scripts": {
    "codegen": "node index prepare-abis && graph codegen",
    "codegen:oks": "npm run prepare:oks && npm run codegen && npm run cleanup",
    "codegen:rates": "npm run prepare:rates && npm run codegen && npm run cleanup",
    "codegen:exchanges": "npm run prepare:exchanges && npm run codegen && npm run cleanup",
    "prepare:oks": "cp subgraphs/Oikos.yaml ./subgraph.yaml",
    "prepare:rates": "cp subgraphs/Oikos-rates.yaml ./subgraph.yaml",
    "prepare:exchanges": "cp subgraphs/Oikos-exchanges.yaml ./subgraph.yaml",
    "cleanup": "rm ./subgraph.yaml || true",
    "build": "graph build",
    "create:rates": "graph create oikos-team/oikos-rates --node https://api.thegraph.com/deploy/",
    "create:exchanges": "graph create oikos-team/oikos-exchanges --node https://thegraph-admin.oikos.cash",
    "remove:exchanges": "graph remove oikos-team/oikos-exchanges --node https://thegraph-admin.oikos.cash",
    "create:oks": "graph create oikos1/oikos --node https://api.thegraph.com/deploy/ ",
    "remove:oks": "graph remove oikos1/oikos --node https://api.thegraph.com/deploy/",
    "remove:rates": "graph remove oikos-team/oikos-rates --node https://api.thegraph.com/deploy/",
    "deploy": "graph deploy --node https://api.thegraph.com/deploy/ --ipfs https://api.thegraph.com/ipfs/ ",
    "deploy:oks": "npm run prepare:oks && graph deploy oikos-cash/oikos --ipfs https://api.thegraph.com/ipfs/ --node https://api.thegraph.com/deploy/ --debug; npm run cleanup; exit $EXIT_CODE",
    "deploy:rates": "npm run prepare:rates && graph deploy oikos-cash/rates --ipfs https://api.thegraph.com/ipfs/ --node https://api.thegraph.com/deploy/ --debug; npm run cleanup;",
    "deploy:exchanges": "npm run prepare:exchanges && graph deploy oikos-cash/exchanges --ipfs https://api.thegraph.com/ipfs/ --node https://api.thegraph.com/deploy/ --debug; npm run cleanup; exit $EXIT_CODE",
    "create-local": "graph create --node http://localhost:8020/ Oikosio-team/Oikos",
    "remove-local": "graph remove --node http://localhost:8020/ Oikosio-team/Oikos",
    "deploy-local": "graph deploy --node http://localhost:8020/ --ipfs http://localhost:5001 Oikosio-team/Oikos"
  },
  "dependencies": {
    "@graphprotocol/graph-cli": "git://github.com/graphprotocol/graph-cli.git#ebeeba0009f026bacf940f25ee7b875fe7676032",
    "@graphprotocol/graph-ts": "0.18.1",
    "@oikos/oikos-bsc": "^0.2.11",
    "chalk": "2.4.2",
    "commander": "2.20.0",
    "ethers": "4.0.27"
  },
  "devDependencies": {
    "@typescript-eslint/eslint-plugin": "1.9.0",
    "@typescript-eslint/parser": "1.9.0",
    "eslint": "5.16.0",
    "eslint-config-prettier": "4.3.0",
    "eslint-plugin-prettier": "3.1.0",
    "prettier": "1.17.1",
    "typescript": "3.4.5"
  }
}
